<!-- hxinotify -->

<xml>

	<include name="${HXCPP}/build-tool/BuildCommon.xml"/>

	<set name="DBG" value="d" if="debug" />
	<set name="ROOT" value="../" unless="ROOT"/>

	<files id="files">
		 <file name="hxinotify.cpp"/>
	</files>

	<target id="inotify.ndll" tool="linker" toolid="dll" output="inotify">
		<ext value=".ndll"/>
		<outdir name="../ndll/${BINDIR}"/>
		<flag value="${LIB_DIR}"/>
		<files id="files"/>
		<!--
		<lib name="-lwebkitgtk-3.0" if="linux"/>
		<lib name="-lgtk-3" if="linux"/>
		<lib name="-lsoup-2.4" if="linux"/>
		<lib name="-ljavascriptcoregtk-3.0" if="linux"/>
		<lib name="-lgdk-3" if="linux"/>
		<lib name="-latk-1.0" if="linux"/>
		<lib name="-lpangocairo-1.0" if="linux"/>
		<lib name="-lgdk_pixbuf-2.0" if="linux"/>
		<lib name="-lcairo-gobject" if="linux"/>
		<lib name="-lpango-1.0" if="linux"/>
		<lib name="-lcairo" if="linux"/>
		<lib name="-lgio-2.0" if="linux"/>
		<lib name="-lgobject-2.0" if="linux"/>
		<lib name="-lglib-2.0" if="linux"/>
		<lib name="-lgdk-3" if="linux"/>
		-->
	</target>

	<target id="default">
		<target id="inotify.ndll"/>
	</target>

</xml>