<?xml version="1.0" encoding="UTF-8"?>

<xml>

	<include name="${HXCPP}/build-tool/BuildCommon.xml"/>

	<set name="DBG" value="d" if="debug" />

	<files id="files">
		 <file name="hxinotify.cpp"/>
	</files>

	<target id="inotify.ndll" tool="linker" toolid="dll" output="inotify">
		<files id="files"/>
		<ext value=".ndll"/>
		<outdir name="./../ndll/${BINDIR}" />
		<!--
		<flag value="${LIB_DIR}"/>
		-->
	</target>

	<target id="default">
		<target id="inotify.ndll"/>
	</target>

</xml>
